<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/image_logo_white"
        android:id="@+id/imageView" />

    <TextView
        style="@style/TextHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="42dp"
        android:text="@string/forgot_password"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView" />

    <EditText
        android:id="@+id/edit_text_email_forgot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_mail"
        android:textColor="@android:color/white"
        android:inputType="textEmailAddress"
        android:maxLength="100"
        android:textColorHint="@color/translucent_white_light"
        android:layout_below="@+id/textView"
        android:layout_marginTop="53dp"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <Button
        android:id="@+id/button_forgot_password"
        android:text="@string/send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/selector_button_white_dark"
        android:textColor="@color/primary_light"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/edit_text_email_forgot"
        android:layout_alignEnd="@+id/edit_text_email_forgot" />


</RelativeLayout>